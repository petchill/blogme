{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      },
      "experimentalDecorators": true,
      "skipLibCheck": true
  },
  "include": [
      "src/**/*"
  ],
  "files": [
      "index.d.ts",
  ]
}